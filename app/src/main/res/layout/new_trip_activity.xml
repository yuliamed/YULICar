<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    tools:context=".activities.AddTrip">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginRight="16sp"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow android:weightSum="2">

                <TextView
                    android:id="@+id/textViewCityFrom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="21sp"
                    android:layout_marginBottom="5sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Откуда"
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/main_text_size" />

                <TextView
                    android:id="@+id/textViewCityTo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Куда"
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/main_text_size" />
            </TableRow>

            <TableRow
                android:layout_height="59dp"
                android:weightSum="2">

                <Spinner
                    android:id="@+id/dr_sp_CityFrom"
                    android:layout_width="0dp"
                    android:layout_height="55sp"
                    android:layout_marginEnd="21sp"
                    android:layout_marginBottom="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_shape"
                    android:spinnerMode="dropdown" />

                <Spinner
                    android:id="@+id/dr_sp_CityTo"
                    android:layout_width="0dp"
                    android:layout_height="55sp"
                    android:layout_marginBottom="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_shape"
                    android:spinnerMode="dropdown" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/dr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginRight="10sp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Время"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/main_text_size" />

            <Spinner
                android:id="@+id/dr_sp_hour"
                android:layout_width="0dp"
                android:layout_height="55sp"
                android:layout_marginEnd="21sp"
                android:layout_weight="1"
                android:background="@drawable/spinner_shape"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/dr_sp_min"
                android:layout_width="0dp"
                android:layout_height="55sp"
                android:layout_weight="1"
                android:background="@drawable/spinner_shape"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_dr_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Когда"
            android:textColor="@color/dark_text"
            android:textSize="@dimen/main_text_size" />

        <CalendarView
            android:id="@+id/dr_calendar"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/dr_text_car_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7sp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Машина"
            android:textColor="@color/dark_text"
            android:textScaleX="0.95"
            android:textSize="@dimen/main_text_size" />

        <EditText
            android:id="@+id/dr_car_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/but_height"
            android:layout_gravity="center"
            android:layout_marginBottom="10sp"
            android:background="@drawable/fields"
            android:cursorVisible="false"
            android:ems="10"
            android:fontFamily="@font/montserrat_medium"
            android:hint="BMV"
            android:inputType="textPersonName"
            android:padding="10sp"
            android:textColor="@color/dark_text"
            android:textScaleX="0.95"
            android:textSize="@dimen/but_text_size"
            app:cornerRadius="@dimen/corner_radius"
            app:strokeColor="@color/dark_text" />

        <TextView
            android:id="@+id/dr_text_car_numb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7sp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Номер машины"
            android:textColor="@color/dark_text"
            android:textScaleX="0.95"
            android:textSize="@dimen/main_text_size" />

        <EditText
            android:id="@+id/dr_car_numb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/but_height"
            android:layout_gravity="center"
            android:layout_marginBottom="10sp"
            android:background="@drawable/fields"
            android:cursorVisible="false"
            android:ems="10"
            android:fontFamily="@font/montserrat_medium"
            android:hint="1111-AL-6"
            android:inputType="textPersonName"
            android:padding="10sp"
            android:textColor="@color/dark_text"
            android:textScaleX="0.95"
            android:textSize="@dimen/but_text_size"
            app:cornerRadius="@dimen/corner_radius"
            app:strokeColor="@color/dark_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7sp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Цена"
            android:textColor="@color/dark_text"
            android:textScaleX="0.95"
            android:textSize="@dimen/main_text_size" />

        <EditText
            android:id="@+id/dr_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/but_height"
            android:layout_gravity="center"
            android:layout_marginBottom="10sp"
            android:background="@drawable/fields"
            android:cursorVisible="false"
            android:ems="10"
            android:fontFamily="@font/montserrat_medium"
            android:hint="15"
            android:inputType="number"
            android:padding="10sp"
            android:textColor="@color/dark_text"
            android:textScaleX="0.95"
            android:textSize="@dimen/but_text_size"
            app:cornerRadius="@dimen/corner_radius"
            app:strokeColor="@color/dark_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7sp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Количество мест"
            android:textColor="@color/dark_text"
            android:textScaleX="0.95"
            android:textSize="@dimen/main_text_size" />

        <EditText
            android:id="@+id/dr_numb_of_seats"
            android:layout_width="match_parent"
            android:layout_height="@dimen/but_height"
            android:layout_gravity="center"
            android:layout_marginBottom="10sp"
            android:background="@drawable/fields"
            android:cursorVisible="false"
            android:ems="10"
            android:fontFamily="@font/montserrat_medium"
            android:hint="15"
            android:inputType="number"
            android:padding="10sp"
            android:textColor="@color/dark_text"
            android:textScaleX="0.95"
            android:textSize="@dimen/but_text_size"
            app:cornerRadius="@dimen/corner_radius"
            app:strokeColor="@color/dark_text" />

        <Button
            android:id="@+id/dr_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/but_height"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="27sp"
            android:background="@drawable/shape_dark_button"
            android:fontFamily="@font/montserrat_medium"
            android:text="Добавить"
            android:textAllCaps="false"
            android:textColor="@color/light_text"
            android:textScaleX="0.95"
            android:textSize="@dimen/but_text_size"
            app:backgroundTint="@color/buttons"
            app:cornerRadius="@dimen/corner_radius"
            app:strokeColor="@color/dark_text"
            app:strokeWidth="@dimen/stroke_width"
            android:onClick="addTrip"/>

    </LinearLayout>
</ScrollView>