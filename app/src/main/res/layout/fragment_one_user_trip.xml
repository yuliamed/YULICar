<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="horizontal"
    android:weightSum="8">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7sp"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tr_user_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="5sp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="13BYR"
                android:textColor="@color/big_text"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tr_user_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="10sp"
                android:layout_weight="3"
                android:fontFamily="@font/montserrat_medium"
                android:text="Минск - Могилев"
                android:textColor="@color/dark_text"
                android:textSize="25sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/tr_user_numbOfSeats"
                android:layout_width="90sp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_light"
                android:text="2 места"
                android:textColor="@color/dark_text"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tr_user_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="2"
                android:fontFamily="@font/montserrat_light"
                android:text="17.07.2020"
                android:textColor="@color/dark_text"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tr_user_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20sp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_light"
                android:text="12:00"
                android:textColor="@color/dark_text"
                android:textSize="19sp" />

            <Button
                android:id="@+id/tr_user_delete"
                android:layout_width="50sp"
                android:layout_height="40sp"
                android:layout_marginLeft="8sp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="right"
                android:layout_gravity="right"
                android:pointerIcon="cell"
                android:rotation="0"
                android:textColor="@color/light_text"
                android:textSize="45sp"
                app:backgroundTint="@color/wrong_input"
                app:cornerRadius="50sp"
                app:icon="@drawable/ic_baseline_delete" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>